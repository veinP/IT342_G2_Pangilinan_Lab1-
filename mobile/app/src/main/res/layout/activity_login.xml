<?xml version="1.0" encoding="utf-8"?>
<!-- Login: matches web .auth-container (bg #7C94B8) + .auth-card (bg #D9D9D7) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hg_steel"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Spacer top -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Logo: white text on steel bg, matching web .auth-logo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Auth Card: bg #D9D9D7, matching web .auth-card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Heading: "Welcome Back" matching web .auth-card h2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/welcome_back"
                android:textColor="@color/hg_navy"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Subtitle: matching web .auth-card .subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/login_subtitle"
                android:textColor="@color/hg_navy"
                android:textSize="14sp" />

            <!-- Error alert: matching web .alert-error -->
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_error"
                android:padding="12dp"
                android:textColor="@color/red_error_text"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- Email label: uppercase, matching web .form-group label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/email"
                android:textColor="@color/hg_navy"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- Email input: bg #B1BBC7, matching web .form-group input -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_edittext"
                android:hint="you@example.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="14dp"
                android:textColor="@color/hg_navy"
                android:textColorHint="@color/hg_card"
                android:textSize="15sp" />

            <!-- Password label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/password"
                android:textColor="@color/hg_navy"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- Password input with toggle -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:hint="••••••••"
                    android:inputType="textPassword"
                    android:paddingHorizontal="14dp"
                    android:paddingEnd="48dp"
                    android:textColor="@color/hg_navy"
                    android:textColorHint="@color/hg_card"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_toggle_password"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Toggle password"
                    android:padding="6dp"
                    android:src="@drawable/ic_eye_closed" />
            </FrameLayout>

            <!-- Login button: bg #7C94B8, white text, uppercase, matching web .btn-primary -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_primary"
                android:letterSpacing="0.05"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/progress_login"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:indeterminateTint="@color/hg_navy"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Sign up link: matching web .auth-footer -->
        <TextView
            android:id="@+id/tv_go_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/no_account"
            android:textColor="@color/hg_navy"
            android:textSize="14sp" />

        <!-- Spacer bottom -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</ScrollView>
